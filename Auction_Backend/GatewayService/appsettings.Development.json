{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Information"
    }
  },
  "ReverseProxy": {
    "Routes": {
      "auctions": {
        "ClusterId": "auctions",
        "Match": {
          "Path": "/auctions/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "api/auctions/{**catch-all}"
          }
        ]
      },
      "search": {
        "ClusterId": "search",
        "Match": {
          "Path": "/search/{**catch-all}",
          "Methods": [ "GET" ]
        },
        "Transforms": [
          {
            "PathPattern": "api/search/{**catch-all}"
          }
        ]
      },
      "accounts-user": {
        "ClusterId": "accounts-user",
        //"AuthorizationPolicy": "RequireAuthenticated",
        "Match": {
          "Path": "/users/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "api/users/{**catch-all}"
          }
        ]
      },
      "accounts-admin": {
        "ClusterId": "accounts-admin",
        "Match": {
          "Path": "/admins/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "api/admins/{**catch-all}"
          }
        ]
      },
      "accounts-authentication": {
        "ClusterId": "accounts-authentication",
        "Match": {
          "Path": "/auth/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "api/authentications/{**catch-all}"
          }
        ]
      },
      "payments": {
        "ClusterId": "payments",
        "Match": {
          "Path": "/payments/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "api/payments/{**catch-all}"
          }
        ]
      },
      "bids": {
        "ClusterId": "bids",
        "Match": {
          "Path": "/bids/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "api/bids/{**catch-all}"
          }
        ]
      }
    },
    "Clusters": {
      "auctions": {
        "Destinations": {
          "auctionApi": {
            "Address": "http://localhost:7001"
          }
        }
      },
      "search": {
        "Destinations": {
          "searchApi": {
            "Address": "http://localhost:7002"
          }
        }
      },
      "accounts-user": {
        "Destinations": {
          "userApi": {
            "Address": "http://localhost:7003"
          }
        }
      },
      "accounts-admin": {
        "Destinations": {
          "adminApi": {
            "Address": "http://localhost:7003"
          }
        }
      },
      "accounts-authentication": {
        "Destinations": {
          "authApi": {
            "Address": "http://localhost:7003"
          }
        }
      },
      "payments": {
        "Destinations": {
          "paymentsApi": {
            "Address": "http://localhost:7004"
          }
        }
      },
      "bids": {
        "Destinations": {
          "bidsApi": {
            "Address": "http://localhost:7005"
          }
        }
      }
    }
  },
  "ConnectionStrings": {
    "Redis": "localhost:6379"
  }
}
